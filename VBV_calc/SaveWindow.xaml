<Window x:Class="VBV_calc.SaveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="保存確認" Height="180" Width="360"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <TextBlock x:Name="messageTextBlock"
                   Text="確認メッセージ"
                   TextWrapping="Wrap"
                   FontSize="14"
                   VerticalAlignment="Top"
                   Height="Auto"
                   MaxWidth="340"
                   Margin="0,0,0,50"/>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,10">
            <Button Content="上書き" Width="80" Margin="5" Click="OverwriteButton_Click"/>
            <Button Content="別名保存" Width="80" Margin="5" Click="SaveAsNewButton_Click"/>
            <Button Content="キャンセル" Width="80" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>