<Window x:Class="VBV_formation.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VBV_formation"
        mc:Ignorable="d"
        Title="処理中..." Height="150" Width="350"
        WindowStyle="ToolWindow" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="20">
        <TextBlock x:Name="statusText" FontSize="14" Text="処理を開始しています..."
                   HorizontalAlignment="Center" Margin="0,0,0,10"/>
        <ProgressBar x:Name="progressBar" Height="25" Minimum="0" Maximum="10" 
                     HorizontalAlignment="Stretch"/>
    </StackPanel>
</Window>
